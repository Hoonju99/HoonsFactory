<head>
<meta charset="EUC-KR">
<title>Insert title here</title>
<script src="https://code.jquery.com/jquery-3.6.0.js"></script>
</head>
<body>
	<input id="userid">
	<input id="username">
	<input id="sal">
	<button type="button" id="btn">등록</button>
	<table>
		<thead>
			<tr>
			<td>이름</td>
			<td>급여</td>
			</tr>
		</thead>
		<tbody>
			<tr data-userid="101">
				<td>홍길동</td>
				<td>1000</td>
			</tr>
		</tbody>
	</table>
	<script>
		//버튼 클릭 이벤트
		
		//$(`<tr data-userid="101"><td>홍길동</td><td>1000</td></tr>`)
		//$(tr).appendTo($("tbody"))
		
		$("#btn").on("click", function(){
			const name = $("#username").val()
			const sal = $("#sal").val()
			
			const m = $("<tr>").append($("<td>").html(name))
							   .append($("<td>").html(sal))
			
			m.data("userid")
			
			$("<tbody>").append(m)
		
		})
		
		
	</script>
</body>
